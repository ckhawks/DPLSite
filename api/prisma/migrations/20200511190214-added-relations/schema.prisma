datasource DS {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = env("BINARY_TARGET")
}

model Post {
  id        Int      @default(autoincrement()) @id
  title     String
  body      String
  createdAt DateTime @default(now())
}

model Team {
  id          Int      @default(autoincrement()) @id
  createdAt   DateTime @default(now())
  name        String
  description String?
  logoUrl     String
}

model User {
  id         Int      @default(autoincrement()) @id
  registered DateTime @default(now())
  name       String
  bio        String?
  teamId     Int?
  team       Team?    @relation(fields: [teamId], references: [id])
}
