datasource DS {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = env("BINARY_TARGET")
}

model Post {
  id        Int      @default(autoincrement()) @id
  title     String
  body      String
  createdAt DateTime @default(now())
}

model Team {
  id          Int    @default(autoincrement()) @id
  name        String
  description String?
  logoUrl     String
  roster      User[]
}

model User {
  id          Int      @default(autoincrement()) @id
  name        String
  description String?
  team        Team?
}
